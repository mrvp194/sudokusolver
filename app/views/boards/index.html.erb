<div id="game">
  <form name="game-form" action="/boards/<%=@sudoku_board.id%>/solve" method="get">
		<div class="row">

			<% @board.each do |key, value| %>
	  			<div class="cell">

		  			<% if value != 0 %>
		  				<input id="<%=key%>" type="number" maxlength="1" value="<%=value%>" disabled>
						<% else %>
		  				<input id="<%=key%>" type="number" maxlength="1" min="1" max="9">
						<% end %>

	  		</div>
			<% end %>	
		
		</div>
		<br><br>
		<input class="submit" type="submit" value="Auto-Complete">
		<a class="submit" href="/">Reset</a>
  </form>
  
</div>
